.category {
  width: 100%;
  height: 100%;
  display: flex;
}

.left {
  width: 30%;
  height: 100%;
  background-color: #f7f7f7;
  font-size: 36rpx;
}

.right {
  width: 70%;
  height: 100%;
}

.right-scroll {
  width: 100%;
  height: 100%;
}

.tab-control-temp {
  position: fixed;
  left: 30%;
  right: 0;
  top: 0;
  z-index: 9;
  background: #fff;
}

.none {
  opacity: 0;
}