/* pages/detail/childCpns/c-bottom-bar/c-bottom-bar.wxss */
.bottom-bar {
  height: 120rpx;
  position: fixed;
  background-color: #fff;
  left: 0;
  right: 0;
  bottom: 0;

  display: flex;
  text-align: center;
}

.bar-item {
  flex: 1;
  display: flex;
}

.bar-item .item{
  flex: 1;
}

.bar-left .text {
  font-size: 13px;
}

.bar-left .icon {
  display: block;
  width: 44rpx;
  height: 44rpx;
  margin: 20rpx auto 6rpx;
}

.bar-right {
  font-size: 32rpx;
  color: #fff;
  line-height: 120rpx;
}

.bar-right .cart {
  background-color: #ffe817;
  color: #333;
}

.bar-right .buy {
  background-color: #f69;
}