/* pages/detail/childCpns/c-shop-info/c-shop-info.wxss */
.shopinfo {
  font-size: 32rpx;
  border-bottom: 12rpx solid #ececec;
}

.shop {
  margin: 20rpx 30rpx;
  padding: 10rpx 0;
}

.shop .image {
  width: 100rpx;
  height: 100rpx;
  margin: 0 20rpx;
  border-radius: 50%;
}

.shop .name {
  position: relative;
  top: -30rpx;
  font-size: 40rpx;
}

.info {
  display: flex;
}

.left {
  text-align: center;
  width: 60%;
  display: flex;
  justify-content: space-around;
  margin-right: 20rpx;
}

.left .item {
  margin-top: 20rpx;
}

.count {
  font-size: 40rpx;
  color: #ff5777;
  margin: 20rpx 0;
}

.right {
  flex: 1;
  border-left: 1px solid #ececec;
}

.score {
  line-height: 66rpx;
  margin-left: 40rpx;
}

.red {
  background-color: red;
  color: #fff;
  padding: 2rpx 10rpx;
  border-radius: 10rpx;
}

.green {
  background-color: rgb(14, 168, 14);
  color: #fff;
  padding: 2rpx 10rpx;
  border-radius: 10rpx;
}

.goshop {
  width: 400rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #ff5777;
  margin: 50rpx auto;
  border-radius: 20rpx;
  color: #fff;
}